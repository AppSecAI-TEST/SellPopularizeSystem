<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llProdet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        style="@style/MatchWrap"
        android:background="@color/black"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_margin_4"
        android:paddingTop="@dimen/padding_margin_4">

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="区域"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvHouseType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="房型"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_margin_4"
            android:text="面积"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingRight="@dimen/padding_margin_8"
            android:text="价格"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvHousePhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/padding_margin_8"
            android:text="房型图"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvHouseDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawSelectorOnTop="true"
        android:listSelector="@color/home_scale_t"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.yd.org.sellpopularizesystem.myView.ElasticHorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/scale_tab1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_margin_4"
                android:paddingTop="@dimen/padding_margin_4">

                <TextView
                    android:id="@+id/tvIntroduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/introtool"
                    android:gravity="center"
                    android:text="介绍"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />

                <TextView
                    android:id="@+id/tvVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/videotool"
                    android:gravity="center"
                    android:text="视频"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />

                <TextView
                    android:id="@+id/tvOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/shoppping"
                    android:gravity="center"
                    android:text="预定"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />

                <TextView
                    android:id="@+id/tvFloor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/floorstool"
                    android:gravity="center"
                    android:text="平面图"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />

                <TextView
                    android:id="@+id/tvContract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/contracttool"
                    android:gravity="center"
                    android:text="合同"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />

                <TextView
                    android:id="@+id/tvFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:alpha="0.5"
                    android:drawablePadding="@dimen/padding_margin_4"
                    android:drawableTop="@mipmap/othertool"
                    android:gravity="center"
                    android:text="文件"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_10" />
            </LinearLayout>
        </com.yd.org.sellpopularizesystem.myView.ElasticHorizontalScrollView>
    </LinearLayout>
</LinearLayout>
