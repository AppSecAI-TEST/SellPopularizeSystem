<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- <include layout="@layout/base_listview" />-->
    <!--<com.yd.org.sellpopularizesystem.myView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/courseclassfy"
        android:textSize="@dimen/text_size_xlarge2"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginTop="@dimen/padding_margin_20"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/padding_margin_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlayPlatform"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_2"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:gravity="center"
            android:text="@string/playplatform"
            android:drawableTop="@mipmap/playplat"
            android:drawablePadding="@dimen/padding_margin_10"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_margin_2"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:drawableTop="@mipmap/success"
            android:drawablePadding="@dimen/padding_margin_10"
            android:gravity="center"
            android:text="@string/successlaw"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tvBasic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_2"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:drawableTop="@mipmap/basicknoledge"
            android:drawablePadding="@dimen/padding_margin_10"
            android:gravity="center"
            android:text="@string/basic_konwledge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSaleTec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_margin_2"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:drawableTop="@mipmap/saletec"
            android:drawablePadding="@dimen/padding_margin_10"
            android:gravity="center"
            android:text="@string/sales_techniques"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/tvProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:drawableTop="@mipmap/project"
            android:drawablePadding="@dimen/padding_margin_10"
            android:gravity="center"
            android:text="@string/project"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
