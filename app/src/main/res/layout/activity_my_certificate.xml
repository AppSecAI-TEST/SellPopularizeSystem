<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


    <LinearLayout
        android:id="@+id/activity_custom_detailed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10">

            <TextView
                android:id="@+id/stateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="状态:未上传"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_15" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10"
            android:text="有效日期"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_size_15" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/dataTextView_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_weight="1"
                android:background="@color/search_edit_bac"
                android:padding="@dimen/padding_margin_10"
                android:text="生效日期" />

            <View
                android:layout_width="20dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:background="@color/black" />

            <TextView
                android:id="@+id/dataTextView_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:layout_weight="1"
                android:background="@color/search_edit_bac"
                android:padding="@dimen/padding_margin_10"
                android:text="到期日期" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10"
            android:text="证件编号"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_size_15" />

        <EditText
            android:id="@+id/zhEdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac"
            android:hint="填写证件编号"
            android:padding="@dimen/padding_margin_10"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="@dimen/tv_size_15" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10">


            <TextView
                android:id="@+id/zhT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/padding_margin_10"
                android:text="证件类型"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_15" />


            <TextView
                android:layout_toRightOf="@+id/zhT"
                android:id="@+id/zhTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pointImageView"
                android:gravity="center|right"
                android:padding="@dimen/padding_margin_10"
                android:text="选择证件类型"
                android:textColor="@color/gray"
                android:textSize="@dimen/tv_size_15" />

            <ImageView
                android:id="@+id/pointImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@mipmap/point" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/search_edit_bac" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_margin_10"
            android:text="上传证书"
            android:textColor="@color/gray"
            android:textSize="@dimen/tv_size_15" />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:background="@color/search_edit_bac">


            <ImageView
                android:id="@+id/srcImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:background="@drawable/stroke"
                android:scaleType="fitXY"
                android:src="@mipmap/pic_add" />


        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/subButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_margin_10"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:background="@color/scale_tab5"
        android:gravity="center"
        android:padding="@dimen/padding_margin_10"
        android:text="@string/submit"
        android:textColor="@color/white" />
</RelativeLayout>