<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView

        android:id="@+id/primaryLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/search_edit_bac"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/sanjiao"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="INVOICE NO : 230516"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"
                    android:textStyle="bold"/>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_margin_20"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:text="INVOICE NO : 230516"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/tv_size_12"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="ABN:"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="PHONE:"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="Address:"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:background="@drawable/dash_line"
                android:layerType="software"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:background="@drawable/dash_line"
                android:layerType="software"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="BILL TO:"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="ACN"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/padding_margin_20"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:text="8888888888888"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/tv_size_12"/>


            </RelativeLayout>


        </LinearLayout>


    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/search_edit_bac"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_margin_10"
        android:paddingTop="@dimen/padding_margin_10">

        <TextView
            android:id="@+id/consentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:background="@color/scale_tab5"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_margin_10"
            android:text="@string/accept"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/resoluteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_margin_20"
            android:layout_marginRight="@dimen/padding_margin_20"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@color/setting_bac"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_margin_10"
            android:text="@string/resolute"
            android:textColor="@color/black"/>


    </LinearLayout>


</RelativeLayout>
