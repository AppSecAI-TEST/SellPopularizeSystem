<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/padding_margin_4"
        android:layout_marginRight="@dimen/padding_margin_4"
        android:background="@drawable/addpopbac"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVisitTile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_4"
            android:paddingTop="@dimen/padding_margin_4"
            android:text="添加"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/tv_size_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etVistTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:background="@drawable/editbac"
                android:hint="请输入标题"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:paddingBottom="@dimen/padding_margin_8"
                android:paddingLeft="@dimen/padding_margin_6"
                android:paddingTop="@dimen/padding_margin_8"
                android:textColor="#ff0000"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/tv_size_12" />

            <TextView
                android:id="@+id/tvVisitTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:paddingRight="@dimen/padding_margin_4"
                android:paddingTop="@dimen/padding_margin_8"
                android:paddingBottom="@dimen/padding_margin_8"
                android:gravity="center_vertical|right"
                android:text="时间"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/padding_margin_12"/>
        </LinearLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="0.5dp"
             android:background="@color/shallow_gray" />

         <TextView
             style="@style/WrapWrap"
             android:layout_marginLeft="@dimen/padding_margin_4"
             android:layout_marginTop="@dimen/padding_margin_4"
             android:text="备注"
             android:textColor="@color/black"
             android:textSize="@dimen/tv_size_12" />-->

        <EditText
            android:id="@+id/etVistContent"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:textSize="@dimen/tv_size_12"
            android:textColor="@color/black"
            android:background="@drawable/edittext_yuyue_bac"
            android:gravity="start" />

        <TextView
            android:id="@+id/tvVisitSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:background="@drawable/pop_button_bac"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_8"
            android:paddingTop="@dimen/padding_margin_8"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_12" />
    </LinearLayout>
</LinearLayout>