<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llEoi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/padding_margin_4"
        android:layout_marginRight="@dimen/padding_margin_4"
        android:background="@drawable/addpopbac"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_4"
            android:paddingTop="@dimen/padding_margin_4"
            android:text="充值"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_margin_6"
            android:paddingTop="@dimen/padding_margin_6">

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_8"
                android:text="金额:"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />

            <TextView
                android:id="@+id/tvMoneyNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_margin_8"
                android:layout_toRightOf="@+id/tvNum"
                android:text="$300.00"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />

            <TextView
                android:id="@+id/tvPayMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding_margin_6"
                android:layout_weight="0.1"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/padding_margin_4"
                android:text="@string/pay_method"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/padding_margin_12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shallow_gray" />

        <TextView
            android:id="@+id/tvEoiSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_4"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:layout_marginRight="@dimen/padding_margin_4"
            android:layout_marginTop="@dimen/padding_margin_4"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_margin_8"
            android:paddingTop="@dimen/padding_margin_8"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_12" />
    </LinearLayout>

    <!--<LinearLayout
        android:id="@+id/llbac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>-->
</LinearLayout>