<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/search_edit_bac"
    >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:paddingTop="@dimen/padding_margin_10">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/salaId"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvSaleId"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:background="@color/search_edit_bac"/>

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:paddingTop="@dimen/padding_margin_10">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/saleprice"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvSalePrice"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="au0.00"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:background="@color/search_edit_bac"/>

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:paddingTop="@dimen/padding_margin_10">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/custome"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvCustomeName"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="au0.00"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/search_edit_bac"/>

        <RelativeLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginRight="@dimen/padding_margin_10"
            android:paddingBottom="@dimen/padding_margin_10"
            android:paddingTop="@dimen/padding_margin_10">

            <TextView
                style="@style/WrapWrap"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/sale_ask_form"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>

            <TextView
                android:id="@+id/tvSaleAskBill"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="@string/confirm_content"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/tv_size_12"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/padding_margin_4"
            android:background="@color/search_edit_bac"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llContent"
        android:background="@color/white">

        <TextView
            android:id="@+id/remark"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:text="@string/remark"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12"/>

        <EditText
            android:id="@+id/etRemark"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/remark"
            android:layout_marginLeft="@dimen/padding_margin_6"
            android:layout_marginRight="@dimen/padding_margin_6"
            android:layout_toRightOf="@+id/remark"
            android:background="@drawable/edittext_bac"
            android:gravity="start"/>

        <RelativeLayout
            android:id="@+id/rlSure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etRemark"
            android:layout_below="@+id/etRemark"
            >

            <CheckBox

                android:id="@+id/tvDot"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="@dimen/padding_margin_6"
                android:layout_marginTop="@dimen/padding_margin_6"
                android:background="@drawable/checkbox_selector"
                android:button="@null"
                android:checked="true"
                />

            <TextView
                android:id="@+id/tvAgree"
                style="@style/WrapWrap"
                android:layout_alignTop="@+id/tvDot"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:layout_toRightOf="@+id/tvDot"
                android:text="@string/confirm_pay_information"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_margin_4"
        android:paddingTop="@dimen/padding_margin_6">

        <Button
            android:id="@+id/btConSubmit"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@color/home_scale"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_12"/>
    </RelativeLayout>
</RelativeLayout>
