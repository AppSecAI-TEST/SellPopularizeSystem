<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVisitTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_centerVertical="true"
            android:text="这是标题"
            android:layout_marginLeft="@dimen/padding_margin_10"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:layout_marginBottom="@dimen/padding_margin_10"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvVisitTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/padding_margin_4"
                android:text="内容"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>