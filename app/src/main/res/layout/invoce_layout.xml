<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#b0000000"
                android:orientation="vertical"
    android:id="@+id/mainRelat">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_margin_20"
        android:layout_marginLeft="@dimen/padding_margin_20"
        android:layout_marginRight="@dimen/padding_margin_20"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reasonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bac2"
            android:gravity="start"
            android:hint="请输入拒绝理由"
            android:minHeight="100dp"
            android:padding="@dimen/padding_margin_4"
            android:textColor="@color/gray"
            android:textColorHint="@color/search_edit"
            android:textSize="@dimen/tv_size_12"/>


        <TextView
            android:id="@+id/subButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_10"
            android:background="@drawable/button_bac2"
            android:gravity="center"
            android:padding="@dimen/padding_margin_10"
            android:text="@string/submit"
            android:textColor="@color/gray"/>


    </LinearLayout>


</RelativeLayout>