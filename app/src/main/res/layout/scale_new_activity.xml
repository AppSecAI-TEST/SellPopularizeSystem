<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/transparent"
            app:navigationIcon="@mipmap/backbt"
            app:popupTheme="@style/Theme.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                style="@style/WrapWrap"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@mipmap/more2" />

        </android.support.v7.widget.Toolbar>



    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="5dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <!--only as a view holder-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/tb1"
                android:layout_width="match_parent"
                android:layout_height="50dp" />


            <ImageView
                android:id="@+id/main_bg"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/apartment"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        style="@style/MatchWrap"
        android:layout_centerInParent="true"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_6"
        android:background="@color/reansoarent_oneoftwo"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/searchLay"
            style="@style/MatchWrap"
            android:layout_above="@+id/scaletab_layout"
            android:layout_marginBottom="@dimen/padding_margin_6"
            android:layout_marginLeft="@dimen/padding_margin_6"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/padding_margin_6"
                android:layout_weight="1"
                android:background="@mipmap/seach_edit"
                android:hint="@string/scale_search"
                android:paddingLeft="@dimen/padding_margin_4"
                android:textSize="@dimen/tv_size_12" />

            <Button
                android:id="@+id/btScaleSearch"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_margin_35"
                android:layout_marginRight="@dimen/padding_margin_6"
                android:background="@drawable/button_bac"
                android:text="搜索"
                android:textColor="@color/white"
                android:textSize="@dimen/tv_size_12" />
        </LinearLayout>

        <include
            android:id="@+id/scaletab_layout"
            layout="@layout/scaletab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/padding_margin_6"
            android:layout_marginRight="@dimen/padding_margin_6" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>