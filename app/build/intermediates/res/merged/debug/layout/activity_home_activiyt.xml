<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/homebackground"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/saleLinearLayyout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/home_scale"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/saleicon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/padding_margin_4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_margin_4"
                        android:text="@string/home_scale"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_margin_4"
                        android:text="@string/home_scale_en"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_08" />

                    <View

                        android:layout_width="70dp"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/padding_margin_4"
                        android:background="@color/gray">

                    </View>

                    <TextView
                        android:id="@+id/tvScaleSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_margin_4"
                        android:text="共有0个推广素材"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_08" />

                    <TextView
                        android:id="@+id/tvNewAddSource"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本周新增0个"
                        android:textColor="@color/white"
                        android:textSize="@dimen/tv_size_08" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/customLinerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/home_custom"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/customImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_margin_10"
                            android:src="@mipmap/customicon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/padding_margin_6"
                            android:layout_marginTop="@dimen/padding_margin_4"
                            android:layout_toRightOf="@id/customImageView"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_custom"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_custom_en"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                            <View
                                android:layout_width="100dp"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:id="@+id/tvCustomNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="您有0位客户"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                            <TextView
                                android:id="@+id/tvNewCustomNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本月新增0位"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/studyLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/home_study"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/studyicon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_margin_4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_study"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_study_en"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:id="@+id/tvStydyDatumCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="共有0个学习资料"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                            <TextView
                                android:id="@+id/tvNotCompleteCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="您有0个考核未完成"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/settingLinearLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/home_setting"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/settingicon" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_margin_4"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_setting"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="@string/home_setting_en"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08" />

                            <View
                                android:layout_width="70dp"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:background="@color/white">

                            </View>

                            <TextView
                                android:id="@+id/tvNoNewsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_margin_4"
                                android:text="您还有0条未读信息"
                                android:textColor="@color/white"
                                android:textSize="@dimen/tv_size_08"
                                android:visibility="gone"/>


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlMessage"
        style="@style/WrapWrap"
        android:layout_alignParentRight="true"
        android:padding="@dimen/padding_margin_10">

        <ImageView
            android:id="@+id/messageImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/message" />

        <TextView
            android:id="@+id/messageTittle"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/messageImageView"
            android:background="@drawable/circle_shape"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_08"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>