<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yd.org.sellpopularizesystem.activity.ProductSubItemDetailActivity">

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="状态"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItStatus"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="在售"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="价格"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItPrice"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="类型"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItType"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="未知"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="批号"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItBatchNum"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="萨达"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="单元号"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItUnitNum"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="萨达"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="楼层类型"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvFloorType"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="楼层"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItFloor"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="房型"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivItBedroom"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:background="@color/transparent"
                android:src="@mipmap/house" />

            <TextView
                android:id="@+id/tvItBedRoom"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />

            <ImageView
                android:id="@+id/ivItBathroom"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_6"
                android:src="@mipmap/shower" />

            <TextView
                android:id="@+id/tvItBath"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="12"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />

            <ImageView
                android:id="@+id/ivCar"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_6"
                android:src="@mipmap/car" />

            <TextView
                android:id="@+id/tvItCarSquare"
                style="@style/WrapWrap"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_margin_4"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/tv_size_12" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="浴室套间数"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItBathNum"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0.0"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="朝向"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItDrec"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="套内面积"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItRoomArea"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="套外面积"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvItORoomArea"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        style="@style/MatchWrap"
        android:layout_marginLeft="@dimen/padding_margin_10"
        android:layout_marginRight="@dimen/padding_margin_10"
        android:paddingBottom="@dimen/padding_margin_8"
        android:paddingTop="@dimen/padding_margin_6">

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:text="总面积"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />

        <TextView
            android:id="@+id/tvTotalArea"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:text="0.00"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />
</LinearLayout>
