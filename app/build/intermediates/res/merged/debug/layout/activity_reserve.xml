<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rlReserver"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.yd.org.sellpopularizesystem.myView.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="@color/search_edit_bac">

        <LinearLayout
            style="@style/MatchWrap"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:text="@string/sada"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReNameOne"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_margin_4"
                    android:layout_toRightOf="@+id/tvPrice"
                    android:text="@string/seprate"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReNameTwo"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padding_margin_4"
                    android:layout_toRightOf="@+id/tvReNameOne"
                    android:text="@string/sada"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvRePrice"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/singlezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvRetype"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/singlezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray"/>

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/available_for_firb"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReFirb"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/singlezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/sale"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReSale"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/singlezero"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/shallow_gray" />-->

            <RelativeLayout
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10"
                android:visibility="gone">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/validity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvValidity"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/threemonth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                android:id="@+id/rlRecus"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/custome"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReCus"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/jinliu"
                    android:textColor="#ff0000"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                android:id="@+id/rlReLawyer"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:text="@string/cuslawyer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <ImageView
                    android:id="@+id/ivReLawyer"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/add"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReLawyer"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/tv_size_12"
                    android:visibility="gone"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                android:id="@+id/rlReGoal"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/buyhousetention"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvReGoal"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/unknow"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/search_edit_bac"/>

            <RelativeLayout
                android:id="@+id/rlPayType"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/padding_margin_10"
                android:layout_marginRight="@dimen/padding_margin_10"
                android:paddingBottom="@dimen/padding_margin_10"
                android:paddingTop="@dimen/padding_margin_10">

                <TextView
                    android:id="@+id/tvPay"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/zhifu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvRePay"
                    style="@style/WrapWrap"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:layout_toRightOf="@+id/tvPay"
                    android:text="$0000"
                    android:textColor="@color/black"
                    android:textSize="@dimen/tv_size_12"/>

                <TextView
                    android:id="@+id/tvRePayType"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="@string/pay_method"
                    android:textColor="#0000ff"
                    android:textSize="@dimen/tv_size_12"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivBpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bpay"/>

                <ImageView
                    android:id="@+id/ivWeixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:layout_toRightOf="@+id/ivBpay"
                    android:src="@mipmap/alipay"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:layout_toRightOf="@+id/ivWeixin"
                    android:src="@mipmap/weichatpay"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_margin_10"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dollar"/>

                <ImageView
                    android:id="@+id/ivWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_margin_30"
                    android:layout_toRightOf="@+id/ivBank"
                    android:src="@mipmap/wallet"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="60dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding_margin_10"
                    android:layout_weight="1"
                    android:background="@color/home_custom"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:id="@+id/tvCertificate"
                    style="@style/WrapWrap"
                    android:layout_centerInParent="true"
                    android:text="@string/uploadeevidence"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </com.yd.org.sellpopularizesystem.myView.BounceScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_margin_35"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_margin_4"
        android:layout_marginTop="@dimen/padding_margin_4"
        android:background="@color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btReSubmit"
            style="@style/WrapWrap"
            android:background="@color/home_scale"
            android:paddingBottom="@dimen/padding_margin_4"
            android:paddingTop="@dimen/padding_margin_4"
            android:text="@string/submit"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>
